{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "src/*": ["src/*"],
      "__tests__/*": ["__tests__/*"]
    }
  },
  "exclude": ["node_modules", "tests", "dist", "**/*spec.ts", "./exemples/**/*"]
}
